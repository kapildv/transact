<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/appBackgroundColor"
    tools:context="com.algo.transact.home.MyProfileFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:background="@color/appBackgroundColor2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/my_profile_tv_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            android:padding="0sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="3sp"
            android:text="Edit Profile"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:id="@+id/my_profile_ll_click_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_profile_iv_profile_pic"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginLeft="5sp"
                android:padding="5sp"
                android:background="@color/appBackgroundColor"
                android:src="@drawable/signboard_closed" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/my_profile_tv_first_name_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:layout_marginTop="@dimen/home_my_profile_lables_vertical_margins"
                    android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                    />

                <EditText
                    android:id="@+id/my_profile_et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Sandeep Patil"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/my_profile_tv_last_name_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:layout_marginTop="@dimen/home_my_profile_lables_vertical_margins"
                    android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                    />

                <EditText
                    android:id="@+id/my_profile_et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:text="Patil"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mob:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />

                    <EditText
                        android:id="@+id/my_profile_et_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:enabled="false"
                        android:text="+91 9964779834"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

                <TextView
                    android:id="@+id/my_profile_tv_otp_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP verify"
                    android:textColor="@color/appBarColor"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_profile_ll_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Name"
                android:layout_marginTop="@dimen/home_my_profile_lables_vertical_margins"
                android:layout_marginLeft="@dimen/home_my_profile_horizontal_margins"
                android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                />
            <EditText
                android:id="@+id/my_profile_et_display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sandeep"
                android:layout_marginLeft="@dimen/home_my_profile_horizontal_margins"
                android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Id"
                android:layout_marginTop="@dimen/home_my_profile_lables_vertical_margins"
                android:layout_marginLeft="@dimen/home_my_profile_horizontal_margins"
                android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                />
            <EditText
                android:id="@+id/my_profile_et_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="techies.sandeep@gmail.com"
                android:layout_marginLeft="@dimen/home_my_profile_horizontal_margins"
                android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:layout_marginTop="@dimen/home_my_profile_lables_vertical_margins"
                android:layout_marginLeft="@dimen/home_my_profile_horizontal_margins"
                android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                />
            <TextView
                android:id="@+id/my_profile_et_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter birth date"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="@dimen/home_my_profile_horizontal_margins"
                android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginTop="@dimen/home_my_profile_lables_vertical_margins"
                android:layout_marginLeft="@dimen/home_my_profile_horizontal_margins"
                android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                />
               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/home_my_profile_horizontal_margins"
                   android:layout_marginRight="@dimen/home_my_profile_horizontal_margins"
                   android:layout_marginBottom="@dimen/home_my_profile_horizontal_margins"
                   android:orientation="horizontal">
               <RadioButton
                   android:id="@+id/my_profile_rb_gender_male"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Male"/>
               <RadioButton
                   android:id="@+id/my_profile_rb_gender_female"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Female"/>
               </RadioGroup>
            <Button
                android:id="@+id/my_profile_bt_save_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Save"
                android:layout_margin="5sp"
                android:background="@color/appBarColor"
                android:textColor="@color/appBackgroundColor2"

                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Transact code"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="1sp"
        android:layout_marginBottom="1sp"
        android:background="@color/appBackgroundColor2"
        android:padding="5sp"
        android:textColor="@color/appBarColor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable App lock password"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="1sp"
        android:layout_marginBottom="1sp"
        android:background="@color/appBackgroundColor2"
        android:padding="5sp"
        android:textColor="@color/appBarColor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications Settings"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="1sp"
        android:layout_marginBottom="1sp"
        android:background="@color/appBackgroundColor2"
        android:padding="5sp"
        android:textColor="@color/appBarColor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Address"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="1sp"
        android:layout_marginBottom="1sp"
        android:background="@color/appBackgroundColor2"
        android:padding="5sp"
        android:textColor="@color/appBarColor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="1sp"
        android:layout_marginBottom="1sp"
        android:background="@color/appBackgroundColor2"
        android:padding="5sp"
        android:textColor="@color/appBarColor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/my_profile_tv_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10sp"
        android:background="@color/appBarColor"
        android:padding="7sp"
        android:gravity="center"
        android:textColor="@color/appBackgroundColor2"

        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    </LinearLayout>
</ScrollView>
</LinearLayout>
