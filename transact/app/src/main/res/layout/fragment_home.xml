                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Pay"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/home_page_smart_cards_text_color"
                                android:textSize="@dimen/home_page_transact_smart_cards_text_size" />
